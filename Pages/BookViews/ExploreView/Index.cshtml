@model Book_Lending_System.Pages.BookViews.ExploreView.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-md-center">
        <h1> TOP RATED </h1>
        <div class="row text-center">
            @foreach(var Book in Model.Book)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 book-cover-container">
                    <img src="data:image/jpg;base64,@Book.ImageData" alt="Book Cover" class="img-fluid foto" title="BOOK TITLE">
                    <a role="button" asp-area="" asp-page="./Details" asp-route-id="@Book.Id" class="btn btn-primary my-1 mb-3 w-100">
                        @switch (Book.Status)
                        {
                            case Data.BookStatus.Borrowed:
                                <text>Borrowed</text>
                                break;
                            case Data.BookStatus.Displayed:
                                <text>Available</text>
                                break;
                            case Data.BookStatus.New:
                                <text>New</text>
                                break;
                            default:
                                <text>Not Available</text>
                                break;
                        }
                    </a>
                </div>
            }
        </div>
    </div>
</div>

