@page
@model Book_Lending_System.Pages.BookViews.AuthorView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Author</a></li>
            <li class="breadcrumb-item" aria-current="page">@Html.DisplayFor(model => model.Author.Name)</li>
        </ol>
    </nav>

    <div class="form-group">
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Author?.Id">Edit</a>
        <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@Model.Author?.Id">Delete</a>
        <a class="btn btn-light btn-outline-primary" asp-page="./Index">Back to List</a>
    </div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
    </dl>
</div>