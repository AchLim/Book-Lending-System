@using Microsoft.AspNetCore.Identity
@using Book_Lending_System.Models

<!-- Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true" aria-modal="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approveModalLabel">Request Lend Approval</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <span>Approve the request?</span>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="approve" asp-route-id="@Model.LendRequest.Id">
                    <input type="submit" class="btn btn-primary" data-bs-dismiss="modal" value="Approve" />
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>