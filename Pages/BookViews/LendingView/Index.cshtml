@page
@model Book_Lending_System.Pages.BookViews.LendingView.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Book Lending Request</li>
    </ol>
</nav>

<div class="container">
    <div class="datatable-container pb-4">
        <table class="datatable_responsive table table-striped table-hover gy-5 gs-7 border rounded w-100">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LendRequest[0].User.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LendRequest[0].Book.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LendRequest[0].DateRequested)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LendRequest[0].StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LendRequest[0].EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LendRequest[0].Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LendRequest[0].DateReturned)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LendRequest)
                {
                    <tr class="cursor-pointer">
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.User.Name)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Book.Title)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.DateRequested)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Status)
                            </a>
                        </td>
                        <td>
                            @if (item.Status == Data.BookLendingStatus.Returned)
                            {
                                <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.DateReturned)
                                </a>
                            }
                            else
                            {
                                <text>
                                    -
                                </text>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>