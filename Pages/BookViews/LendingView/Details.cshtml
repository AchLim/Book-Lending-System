@page
@model Book_Lending_System.Pages.BookViews.LendingView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Book Lending Request</a></li>
            <li class="breadcrumb-item" aria-current="page">@Html.DisplayFor(model => model.UserBook.User.Name) - @Html.DisplayFor(model => model.UserBook.Book.Title)</li>
        </ol>
    </nav>

    <div class="form-group">
@*        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Category?.Id">Edit</a>
        <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@Model.Category?.Id">Delete</a>*@
        <a class="btn btn-light btn-outline-primary" asp-page="./Index">Back to List</a>
    </div>

    <hr />

    <div class="row form-sheet">
        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.UserBook.User.Name)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.UserBook.User.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.UserBook.Book)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.UserBook.Book.Title)
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.UserBook.DateRequested)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.UserBook.DateRequested)
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.UserBook.Status)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.UserBook.Status)
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.UserBook.StartDate)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.UserBook.StartDate)
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.UserBook.EndDate)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.UserBook.EndDate)
                </div>
            </div>
            @if (Model.UserBook.Status == Data.BookLendingStatus.Returned)
            {
                <div class="row">
                    <div class="col-4 form-label">
                        @Html.DisplayNameFor(model => model.UserBook.DateReturned)
                    </div>
                    <div class="col-8 form-value">
                        @Html.DisplayFor(model => model.UserBook.DateReturned)
                    </div>
                </div>
            }
        </div>
    </div>
</div>