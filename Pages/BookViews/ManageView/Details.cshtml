@page
@model Book_Lending_System.Pages.BookViews.ManageView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="Index">Book</a></li>
        <li class="breadcrumb-item" aria-current="page">@Html.DisplayFor(model => model.Book.Title)</li>
    </ol>

    <div class="form-button-view">
        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@Model.Book?.Id">Edit</a>
        <a class="btn btn-primary btn-sm" asp-page="./Delete" asp-route-id="@Model.Book?.Id">Delete</a>
    </div>
</nav>

<div class="container">
    <div class="row form-sheet">
        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.Title)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.Book.Title)
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.Status)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.Book.Status)
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.BookAuthors)
                </div>
                <div class="col-8 form-value">
                    @if (Model.BookAuthors != null)
                    {
                        var AuthorList = Model.BookAuthors;
                        foreach (var author in AuthorList)
                        {
                            <span class="badge bg-primary">@author</span>
                            <span>&nbsp;</span>
                        }
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.ReleaseDate)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.Book.ReleaseDate)
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.BookCategories)
                </div>
                <div class="col-8 form-value">
                    @if (Model.BookCategories != null)
                    {
                        var CategoryList = Model.BookCategories;
                        foreach (var category in CategoryList)
                        {
                            <span class="badge bg-primary">@category</span>
                            <span>&nbsp;</span>
                        }
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.BookPublishers)
                </div>
                <div class="col-8 form-value">
                    @if (Model.BookPublishers != null)
                    {
                        var PublisherList = Model.BookPublishers;
                        foreach (var publisher in PublisherList)
                        {
                            <span class="badge bg-primary">@publisher</span>
                            <span>&nbsp;</span>
                        }
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.ImageLocation)
                </div>
                <div class="col-8 form-value">
                    @if (Model.Book != null)
                    {
                        <img src="~/images/uploads/@{@Model.Book.ImageLocation}" alt="Cover" style="height: 120px; width: 120px;" />
                    }
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Book.Synopsis)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.Book.Synopsis)
                </div>
            </div>
        </div>
    </div>
</div>
