@page
@model Book_Lending_System.Pages.BookViews.ManageView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Book</a></li>
            <li class="breadcrumb-item" aria-current="page">@Html.DisplayFor(model => model.Book.Title)</li>
        </ol>
    </nav>

    <div class="form-group">
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Book?.Id">Edit</a>
        <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@Model.Book?.Id">Delete</a>
        <a class="btn btn-light btn-outline-primary" asp-page="./Index">Back to List</a>
    </div>

    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
@*        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Synopsis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Synopsis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ImageLocation)
        </dt>
        <dd class="col-sm-10">
            <div>
                @if (Model.Book != null)
                {
                    <img src="~/images/uploads/@{@Model.Book.ImageLocation}" alt="Cover" style="height: 120px; width: 120px;" />
                }
            </div>
        </dd>
    </dl>
</div>