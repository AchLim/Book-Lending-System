@page
@model Book_Lending_System.Pages.BookViews.ManageView.EditModel
@using Book_Lending_System.Data;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Book</a></li>
            <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Book?.Id">@Html.DisplayFor(model => model.Book.Title)</a></li>
            <li class="breadcrumb-item" aria-current="page">Edit</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-page="Details" asp-route-id="@Model.Book?.Id" class="btn btn-light btn-outline-primary">Cancel</a>
                </div>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Book.Id" />
                <div class="form-group">
                    <label asp-for="Book.Title" class="control-label"></label>
                    <input asp-for="Book.Title" class="form-control" />
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Author(s)</label>
                    @Html.ListBoxFor(model => model.SelectedAuthors, new SelectList(Model.Author, "Id", "Name"), new {@class="multiselect"})
                </div>
                <div class="form-group">
                    <label asp-for="Book.Synopsis" class="control-label"></label>
                    <textarea asp-for="Book.Synopsis" class="form-control"></textarea>
                    <span asp-validation-for="Book.Synopsis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.ReleaseDate" class="control-label"></label>
                    <input asp-for="Book.ReleaseDate" class="form-control" />
                    <span asp-validation-for="Book.ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Book.Status" class="control-label"></label>
                    <select asp-for="Book.Status" class="form-control" asp-items="@Html.GetEnumSelectList<BookStatus>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Book.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Category(ies)</label>
                    @Html.ListBoxFor(model => model.SelectedCategories, new SelectList(Model.Categories, "Id", "Name"), new {@class="multiselect"})
                </div>
                <div class="form-group">
                    <label class="control-label">Publisher(s)</label>
                    @Html.ListBoxFor(model => model.SelectedPublishers, new SelectList(Model.Publisher, "Id", "Name"), new {@class="multiselect"})
                </div>
                <div class="form-group">
                    <label asp-for="Book.ImageFile" class="control-label"></label>
                    <input type="file" accept="image/png,image/jpeg" asp-for="Book.ImageFile" class="form-control" />
                    <span asp-validation-for="Book.ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none !important;">
                    <label asp-for="Book.ImageLocation" class="control-label"></label>
                    <input type="text" asp-for="Book.ImageLocation" class="form-control" />
                    <span asp-validation-for="Book.ImageLocation" class="text-danger"></span>
                </div>
                <br />
            </form>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-info btn-sm m-1" data-bs-toggle="modal" data-bs-target="#attachedFileModal">
                Attached File &nbsp; <i class="bi bi-search"></i>
            </button>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="attachedFileModal" tabindex="-1" aria-labelledby="attachedFileModalLabel" aria-hidden="true" aria-modal="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="attachedFileModalLabel">Attached File</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @{
                    if (Model.Book != null && Model.Book.ImageLocation != null)
                    {
                        <text>
                            <img src="~/images/uploads/@{@Model.Book.ImageLocation}" alt="Cover" class="img img-fluid" />
                        </text>
                    }
                    else
                    {
                        <text>
                            Unable to preview last uploaded file.
                        </text>
                    }
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
