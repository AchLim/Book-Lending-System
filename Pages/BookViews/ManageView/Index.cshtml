@page
@model Book_Lending_System.Pages.BookViews.ManageView.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Book</li>
        </ol>
    </nav>
   
    <div class="pb-4">
        <a class="btn btn-primary" asp-page="Create">Create</a>
    </div>
    
    <table class="table table-striped table-hover gy-5 gs-7 border rounded w-100" id="book_datatable_responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Book[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book[0].Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book[0].Status)
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Book) {
            <tr class="cursor-pointer">
                <td>
                    <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
                </td>
                <td>
                    <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Author)
                    </a>
                </td>
                <td>
                    <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </a>
                </td>
                <td>
                    <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Status)
                    </a>
                </td>
            </tr>
    }
        </tbody>
    </table>

</div>