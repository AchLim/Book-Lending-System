@model Book_Lending_System.Pages.BookViews.ManageView.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="Index">Book</a></li>
        <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Book?.Id">@Html.DisplayFor(model => model.Book.Title)</a></li>
        <li class="breadcrumb-item" aria-current="page">Delete</li>
    </ol>

    <div class="form-button-view">
        <label role="button" for="form-delete-record" class="btn btn-danger btn-sm">Delete</label>
        <a asp-page="Details" asp-route-id="@Model.Book?.Id" class="btn btn-light btn-sm btn-outline-primary">Cancel</a>
    </div>
</nav>
<div class="container">
    <form method="post" class="d-none-important">
        <input type="hidden" asp-for="Book.Id" />
        <input type="submit" id="form-delete-record" value="Delete" class="btn btn-danger" />
    </form>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
