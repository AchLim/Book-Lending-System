@page
@model Book_Lending_System.Pages.BookViews.CategoryView.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Category</a></li>
            <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Category?.Id">@Html.DisplayFor(model => model.Category.Name)</a></li>
            <li class="breadcrumb-item" aria-current="page">Edit</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-page="Details" asp-route-id="@Model.Category?.Id" class="btn btn-light btn-outline-primary">Cancel</a>
                </div>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Category.Id" />
                <div class="form-group">
                    <label asp-for="Category.Name" class="control-label"></label>
                    <input asp-for="Category.Name" class="form-control" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
