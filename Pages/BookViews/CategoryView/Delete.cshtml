@page
@model Book_Lending_System.Pages.BookViews.CategoryView.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="Index">Category</a></li>
        <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.Category?.Id">@Html.DisplayFor(model => model.Category.Name)</a></li>
        <li class="breadcrumb-item" aria-current="page">Delete</li>
    </ol>

    <div class="form-button-view">
        <label role="button" for="form-delete-record" class="btn btn-danger btn-sm">Delete</label>
        <a asp-page="Details" asp-route-id="@Model.Category?.Id" class="btn btn-light btn-sm btn-outline-primary">Cancel</a>
    </div>
</nav>

<div class="container">
    <form method="post">
        <div class="row form-sheet">
            <div class="col-sm-12 col-md-6">
                <div class="row">
                    <div class="col-4 form-label">
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </div>
                    <div class="col-8 form-value">
                        @Html.DisplayFor(model => model.Category.Name)
                    </div>
                </div>
            </div>

            <!-- Invisible -->
            <div class="form-group d-none-important">
                <input type="submit" id="form-delete-record" value="Save" class="btn btn-primary" />
                <input type="hidden" asp-for="Category.Id" />
            </div>
        </div>
    </form>
</div>
