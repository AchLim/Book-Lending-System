@page
@model Book_Lending_System.Pages.UserView.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">User</li>
    </ol>
    <div class="form-button-view">
        <a class="btn btn-primary btn-sm" asp-page="Create">Create</a>
    </div>
</nav>

<div class="container">
    <div class="datatable-container pb-4">
        <table class="datatable_responsive table table-striped table-hover gy-5 gs-7 border rounded w-100">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].NIK)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].TelephoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].Nationality)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].Citizenship)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserPartner[0].User)
                </th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.UserPartner)
                {
                    <tr class="cursor-pointer">
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.NIK)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.TelephoneNumber)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Gender)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.BirthDate)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Address)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Nationality)
                            </a>
                        </td>
                        <td>
                            <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Citizenship)
                            </a>
                        </td>
                        <td>
                            @if (item.User != null)
                            {
                                <a class="text-decoration-none text-black d-block" asp-page="../AccountView" asp-route-id="@item.UserId">
                                    <span class="badge bg-primary">
                                        @Html.DisplayFor(modelItem => item.User.UserName)
                                    </span>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
