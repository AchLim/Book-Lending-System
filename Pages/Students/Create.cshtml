@page
@model Book_Lending_System.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.NPM" class="control-label">NPM</label>
                <input asp-for="Student.NPM" class="form-control" />
                <span asp-validation-for="Student.NPM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label">Name</label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.TelephoneNumber" class="control-label">Telephone Number</label>
                <input asp-for="Student.TelephoneNumber" class="form-control" />
                <span asp-validation-for="Student.TelephoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudyProgram" class="control-label">Study Program</label>
                <select asp-for="Student.StudyProgram" class="form-control" asp-items="Html.GetEnumSelectList<StudyProgram>()">
                    <option></option>
                </select>
                <span asp-validation-for="Student.StudyProgram" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 1rem;">
                <label asp-for="Student.UserAccountId" class="control-label">User Account</label>
                <br />
                @Html.DropDownListFor(model => model.Student.UserAccountId, Model.GetUserAccountSelectList(), string.Empty, new {@class = "custom-dropdown"})
                <span asp-validation-for="Student.UserAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

<script>
    $('.custom-dropdown').dropdown();
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
