@page
@model Book_Lending_System.Pages.AccountView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">User Account</a></li>
            <li class="breadcrumb-item" aria-current="page">Details</li>
        </ol>
    </nav>
    <div>
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.UserAccount?.Id">Edit</a>
        <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@Model.UserAccount?.Id">Delete</a>
        <a class="btn btn-light btn-outline-primary" asp-page="./Index">Back to List</a>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAccount.UserName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAccount.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAccount.Email)
        </dd>

        <dt class="col-sm-2">
            Roles
        </dt>
        <dd class="col-sm-10">
            @string.Join(" , ", Model.UserRoles)
        </dd>
    </dl>
</div>
