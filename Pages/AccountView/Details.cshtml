@page
@model Book_Lending_System.Pages.AccountView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="Index">Account</a></li>
        <li class="breadcrumb-item" aria-current="page">@Html.DisplayFor(m => m.UserAccount.UserName)</li>
    </ol>
    <div class="form-button-view">
        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@Model.UserAccount?.Id">Edit</a>
        <a class="btn btn-primary btn-sm" asp-page="./Delete" asp-route-id="@Model.UserAccount?.Id">Delete</a>
    </div>
</nav>


@*<div class="button-header">
    <!-- button change password? -->
</div>*@


<div class="container">
    <form method="post">
        <div class="row form-sheet">
            <div class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>

            <div class="col-sm-12 col-md-6">
                <div class="row">
                    <div class="col-4 form-label">
                        Username
                    </div>
                    <div class="col-8 form-value">
                        @Html.DisplayFor(model => model.UserAccount.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 form-label">
                        @Html.DisplayNameFor(model => model.UserAccount.Email)
                    </div>
                    <div class="col-8 form-value">
                        @Html.DisplayFor(model => model.UserAccount.Email)
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-6">
                <div class="row">
                    <div class="col-4 form-label">
                        Roles
                    </div>
                    <div class="col-8 form-value">
                        @if (Model.UserRoles != null)
                        {
                            var RoleList = Model.UserRoles;
                            foreach (var role in RoleList)
                            {
                                <span class="badge bg-primary">@role</span>
                                <span>&nbsp;</span>
                            }
                        }
                    </div>
                </div>
            </div>


            <!-- Invisible -->
            <div class="form-group d-none-important">
                <input type="submit" id="form-save-record" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-light btn-outline-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>