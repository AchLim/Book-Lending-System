@page
@model Book_Lending_System.Pages.AccountView.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Account</li>
        </ol>
    </nav>

    <div class="pb-4">
        <a class="btn btn-primary" asp-page="Create">Create</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Email)
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Account)
            {
                <tr class="cursor-pointer">
                    <td>
                        <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </a>
                    </td>
                    <td>
                        <a class="text-decoration-none text-black d-block" asp-page="./Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Email)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>