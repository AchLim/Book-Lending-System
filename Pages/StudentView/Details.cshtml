@page
@model Book_Lending_System.Pages.StudentView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="Index">Student</a></li>
        <li class="breadcrumb-item" aria-current="page">@Html.DisplayFor(model => model.Student.NPM) - @Html.DisplayFor(model => model.Student.Name)</li>
    </ol>

    <div class="form-button-view">
        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@Model.Student?.Id">Edit</a>
        <a class="btn btn-primary btn-sm" asp-page="./Delete" asp-route-id="@Model.Student?.Id">Delete</a>
    </div>
</nav>

<div class="container">
    <div class="row form-sheet">
        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Student.NPM)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.Student.NPM)
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Student.Name)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.Student.Name)
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Student.StudyProgram)
                </div>
                <div class="col-8 form-value">
                    @Html.DisplayFor(model => model.Student.StudyProgram)
                </div>
            </div>
            <div class="row">
                <div class="col-4 form-label">
                    @Html.DisplayNameFor(model => model.Student.UserPartner)
                </div>
                <div class="col-8 form-value">
                    @if (Model.Student != null && Model.Student.UserPartner != null)
                    {
                        <span class="badge bg-primary">
                            @Model.Student.UserPartner.Name
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
