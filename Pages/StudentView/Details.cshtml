@page
@model Book_Lending_System.Pages.StudentView.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Student</a></li>
            <li class="breadcrumb-item" aria-current="page">Details</li>
        </ol>
    </nav>
    <h4>Student</h4>
    <div>
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Student?.NPM">Edit</a>
        <a class="btn btn-light btn-outline-primary" asp-page="./Index">Back to List</a>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.StudyProgram)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudyProgram)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Account)
        </dt>
        @if (Model.Student.Account != null)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.Account.UserName)
            </dd>
        }
    </dl>
</div>
