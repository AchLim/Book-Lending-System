@page
@model Book_Lending_System.Pages.UserAccounts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UserAccount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAccount.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAccount.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAccount.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAccount.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAccount.Roles)
        </dt>
        <dd class="col-sm-10">
            @{
                string roles = "-";
                if (Model.UserAccount.Roles != null)
                {
                    roles = String.Empty;
                    foreach (var role in Model.UserAccount.Roles)
                    {
                        if (roles != string.Empty)
                            roles += " | ";
                        roles += role.RoleType;
                    }
                }

                <text>
                    @roles
                </text>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.UserAccount?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
