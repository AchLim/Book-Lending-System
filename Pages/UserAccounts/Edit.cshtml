@page
@model Book_Lending_System.Pages.UserAccounts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserAccount.Id" />
            <div class="form-group">
                <label asp-for="UserAccount.Username" class="control-label"></label>
                <input asp-for="UserAccount.Username" class="form-control" />
                <span asp-validation-for="UserAccount.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.Email" class="control-label"></label>
                <input asp-for="UserAccount.Email" class="form-control" />
                <span asp-validation-for="UserAccount.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.Password" class="control-label"></label>
                <input asp-for="UserAccount.Password" class="form-control" />
                <span asp-validation-for="UserAccount.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.ConfirmPassword" class="control-label"></label>
                <input asp-for="UserAccount.ConfirmPassword" class="form-control" />
                <span asp-validation-for="UserAccount.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAccount.RoleTypeList" class="control-label"></label>
                <select asp-for="UserAccount.RoleTypeList" class="form-control custom-dropdown" asp-items="@Html.GetEnumSelectList<Models.RoleType>()" multiple>
                    <option></option>
                </select>
                <span asp-validation-for="UserAccount.RoleTypeList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

<script>
    $('.custom-dropdown').dropdown();
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
